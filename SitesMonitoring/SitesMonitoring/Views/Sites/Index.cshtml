@model IEnumerable<SitesMonitoring.Models.Site>

@{
	ViewData["Title"] = "Index";
	
}

	<h2>Index</h2>

	<script>
		function fresh() {
			location.reload();
		}
		setInterval("fresh()", @ViewData["Timer"]);
	</script>

	<p>
		<!--<a asp-action="Create">Create New</a>-->
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.URL)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.LastCheckedTime)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.URL)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.GetStatusString)
					</td>
					<td>
						@(item.LastCheckedTime.HasValue ? item.LastCheckedTime.Value.ToString("dd/MM/yyyy HH:mm:ss") : "")
					</td>
					<!--<td>
						<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.ID">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
					</td>-->
				</tr>

		}
			</tbody>
		</table>
